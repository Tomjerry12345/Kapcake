            android:theme="@style/Theme.Design.CustomNoActionBar"
            />
        <activity
            android:name="com.kapcake.pos.Activity.MainActivity"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.Design.CustomNoActionBar"

            />

        <meta-data
            android:name="io.fabric.ApiKey"
